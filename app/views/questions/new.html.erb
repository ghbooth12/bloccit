<div class="page-header text-center">
  <h1>Create New Question <small>Ask us here!</small></h1>
</div>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_for @question, :html => {:class => "form-horizontal"} do |f| %>
      <div class="form-group">
        <%= f.label :title, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_field :title, class: "form-control", placeholder: "Enter your title here."%>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :body, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.text_area :body, rows: 15, class: "form-control", placeholder: "Enter your question here."%>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-10 col-md-offset-2">
          <div class="checkbox">
            <%= f.check_box :resolved, {}, "true", "false" %>
            <%= f.label :resolved %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-10 col-md-offset-2">
          <%= f.submit "Save", class: "btn btn-success" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
