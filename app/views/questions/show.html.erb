<div class="panel panel-success">
  <div class="panel-heading">
    <h3 class="panel-title">New Question</h3>
  </div>
  <div class="panel-body">
    <p><span class="label label-default">Title</span> <%= @question.title %></p>
    <p><span class="label label-default">body</span> <%= @question.body %></p>
    <p><span class="label label-default">Resolved</span> <%= message_resolved(@question) %></p>
  </div>
  <div class="panel-footer">
    <%= link_to "Edit", edit_question_path(@question), class: "btn btn-primary"%>
    <%= link_to "Delete", question_path(@question), method: :delete, class: "btn btn-danger", data: {confirm: "Are you sure you want to delete this question?"} %>
  </div>
</div>
