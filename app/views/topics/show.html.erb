<h1><%= @topic.name %></h1>

<% if user_is_authorized_for_topics? %>
  <%= link_to "Edit Topic", edit_topic_path(@topic), class: "btn btn-success" %>
  <%= link_to "Delete Topic", topic_path(@topic), method: :delete, class: "btn btn-danger", data: {confirm: "Are you sure you want to delete this topic?"} %>
<% end %>

<div class="row">
  <div class="col-md-8">
    <p class="lead">
      <%= render partial: 'labels/list', locals: { labels: @topic.labels } %>
      <br />
      <%= @topic.description %>
    </p>
    <%= render @topic.posts %>
    <!-- Comments -->
    <div>
      <h3>Comments</h3>
      <% @topic.comments.each do |comment| %>
        <%= render partial: 'comments/comment', locals: { topic_or_post: @topic, comment: comment } %>
      <% end %>
    </div>
    <% if current_user %>
      <%= render partial: 'comments/form', locals: { topic_or_post: @topic, comment: Comment.new } %>
    <% end %>
    <!-- Comments End -->
  </div>
  <% if current_user %>
    <div class="col-md-4">
      <%= link_to "New Post", new_topic_post_path(@topic), class: "btn btn-success" %>
    </div>
  <% end %>
</div>
